<!DOCTYPE html>
<html>
  <head>
    <title>MoveTxProj Test</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <!-- Navigation bar  -->
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
      <!-- Collapse Section -->
      <div class="collapse navbar-collapse" id="navbarColor01">
        <!-- Navbar menu -->
        <ul class="navbar-nav mr-auto">
          <!-- Navbar Items -->
          <li class="nav-item">
            <%= image_tag "move tx logo.JPG", class: 'nav-logo'  %>
          </li>
          <li class="nav-item <%= active_class(root_path) %>">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <%# admin specific display  %>
          <% if !@user.nil? %>
            <% if @user.position != 'Member' %>
              <li class="nav-item <%= active_class(member_events_path) %>">
                <%= link_to "New Member Approval", update_status_path, class: 'nav-link' %>
              </li>
              <li class="nav-item <%= active_class(members_path) %>">
                <%= link_to "Member List", members_path, class: 'nav-link' %>
              </li>
              <li class="nav-item <%= active_class(committees_path) %>">
                <%= link_to "Committees", committees_path, class: 'nav-link' %>
              </li>
            <% end %>
            <li class="nav-item <%= active_class(excuses_path) %>">
              <%= link_to "Excuses", excuses_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item <%= active_class(events_path) %>">
            <%= link_to "Events", events_path, class: 'nav-link' %>
          </li>
          <li class="nav-item <%= active_class(member_events_path) %>">
            <%= link_to "Activities", member_events_path, class: 'nav-link' %>
          </li>

          <!-- Checks if the user is logged in as to not display invalid information -->
          <% if !@user.nil? %>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_admin_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <img src="<%= current_admin.avatar_url %>" class='nav-avatar' referrerpolicy="no-referrer"/>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
