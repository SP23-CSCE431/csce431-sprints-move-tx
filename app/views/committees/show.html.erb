<p style="color: green"><%= notice %></p>

<%= render @committee %>

<div>
  <strong>Members:</strong>

  <% @members.each do |member| %>
    <% if member.committee_id == @committee.id %>
      <li><%= member.name %></li>
    <% end %>
  <% end %>
</div>

<br>

<div>
  <%if @user.position != "Member"%>
    <%= link_to "Edit this committee", edit_committee_path(@committee) %> |
    <%= link_to "Delete this committee", delete_committee_path(@committee), class: "action delete" %> |
  <% end %>
  <%= link_to "Back to committees", committees_path %>
</div>
